[
  {
    "type": "container",
    "name": "postgres",
    "image": "postgres:15",
    "restart_policy": "always",
    "ports": ["5432:5432"],
    "environment": {
      "POSTGRES_USER": "admin",
      "POSTGRES_PASSWORD": "password",
      "POSTGRES_DB": "mydb"
    },
    "volumes": ["/yacht/volumes/postgres:/var/lib/postgresql/data"]
  },
  {
    "type": "container",
    "name": "adminer",
    "image": "adminer",
    "restart_policy": "always",
    "ports": ["8080:8080"]
  },
  {
    "type": "container",
    "name": "redis",
    "image": "redis:7",
    "restart_policy": "always",
    "ports": ["6379:6379"],
    "volumes": ["/yacht/volumes/redis:/data"]
  },
  {
    "type": "container",
    "name": "meilisearch",
    "image": "getmeili/meilisearch:latest",
    "restart_policy": "always",
    "ports": ["7700:7700"],
    "environment": {
      "MEILI_MASTER_KEY": "masterKey"
    },
    "volumes": ["/yacht/volumes/meili:/meili_data"]
  }
]
